{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Club creation</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input type="submit" value="Create" class="btn btn-success"/>
            {{ form_end(form) }}
        </div>
        <div class="col-md-12">
            <a href="{{ path('club_index') }}" class="btn btn-default">Back to the list</a>
        </div>
    </div>
{% endblock %}

{% block extra_javascripts %}
    <script src="{{ asset('assets/vendor/jquery-mask-plugin/dist/jquery.mask.min.js') }}"></script>
    <script>
        $(function () {

            var options =  {
                onKeyPress: function(cep, e, field, options){
                    $('.phone').mask('000-00-00-00', options);
                },
                placeholder: "000-00-00-00"
            };

            $('.phone').mask('000-00-00-00', options);
        })
    </script>
{% endblock %}
