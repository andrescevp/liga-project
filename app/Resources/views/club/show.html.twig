{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <h1>Club</h1>
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ club.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ club.name }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ club.phone }}</td>
                </tr>
                <tr>
                    <th>Active</th>
                    <td>{{ (club.active) ? 'yes' : 'no' }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-12">
            <h2>Players</h2>
            <table class="table">
                <tbody>
                {% for player in club.players %}
                    <tr>
                        <th>name</th>
                        <td>{{ player.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <a href="{{ path('club_index') }}" class="btn btn-default">Back to the list</a>
        </div>
        <div class="col-md-4">
            <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-warning">Edit</a>
        </div>
        <div class="col-md-4">
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
